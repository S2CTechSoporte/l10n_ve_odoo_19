<?xml version="1.0" encoding="UTF-8" ?>
<templates>

    <t t-name="account_dual_currency.MulticurrencyReportFilter" t-inherit="account_reports.AccountReportFilters" t-inherit-mode="extension">
        
        <xpath expr="//." position="inside">

            <div id="filter_account">
                <Dropdown togglerClass="'btn btn-secondary'">
                    <t t-set-slot="toggler">
                        <i class="fa fa-percent me-1"/>Cuenta
                    </t>

                    <div class="dropdown-item">
                        <label>Cuenta</label>
                        <MultiRecordSelector t-props="getMultiRecordSelectorProps('account.account', 'account_ids')"/>
                    </div>
                </Dropdown>
            </div>
        
        </xpath>
        
        <xpath expr="//." position="inside">
            <t t-if="'curr_conversion' in this.controller.options">
                <div id="filter_multicurrency">
                    <t t-call="account_dual_currency.MulticurrencyReport"/>
                </div>
            </t>
        </xpath>
    </t>
  
