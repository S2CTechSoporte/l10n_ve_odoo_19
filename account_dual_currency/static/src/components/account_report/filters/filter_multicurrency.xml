<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_dual_currency.MulticurrencyReport">
        <Dropdown>
            <button type="button" class="btn btn-secondary">
                <i class="fa fa-money"/> Moneda
            </button>
            <t t-set-slot="content">
                <t t-foreach="Object.values(this.controller.options.currencies)" t-as="currency" t-key="currency_index">
                    <DropdownItem
                        class="{ 'selected': currency.currency_selected }"
                        onSelected="() => this.applyChangeCurrency(currency.currency_id)"
                    >
                        <t t-out="currency.currency_name"/>
                    </DropdownItem>
                </t>
            </t>
        </Dropdown>
    </t>
</templates>
