<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
    
        <record id="account_move_form_inherit_views" model="ir.ui.view">
            <field name="name">account_move_form_inherit_views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="acuerdo_moneda" invisible="move_type not in  ('out_invoice', 'out_refund', 'out_receipt','in_invoice', 'in_refund', 'in_receipt')" />
                    <field name="fcurrency_id" readonly="1"/>
                    <field name="name_rate" string="Moneda de Referencia"/>
                    <field name="edit_trm" groups="account_dual_currency.group_edit_trm"/>
                    <field name="tax_today" groups="account_dual_currency.group_edit_trm" string="Tasa" readonly="edit_trm == False" force_save="1"/>
                    <!-- " -->
                    <field name="same_currency" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/*[self::tree or self::list]/field[@name='price_unit']" position="after">
                    <field name="price_unit_fcurrency" widget='monetary' options="{'currency_field': 'fcurrency_id'}"/>
                    <field name="fcurrency_id" readonly="1" invisible="1"  column_invisible="True"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/*[self::tree or self::list]/field[@name='price_subtotal']" position="before">
                     <field name="price_subtotal_fcurrency" widget='monetary' options="{'currency_field': 'fcurrency_id'}"/>
                </xpath>

                
                <xpath expr="//field[@name='invoice_line_ids']/*[self::tree or self::list]/field[@name='price_subtotal']" position="attributes">
                    <attribute name="string">Subtotal</attribute>
                </xpath>

                 <xpath expr="//field[@name='invoice_line_ids']/*[self::tree or self::list]/field[@name='price_total']" position="attributes">
                    <attribute name="string">Total</attribute>
                </xpath>

                <xpath expr="/form/sheet/notebook/page[@id='aml_tab']/field[@name='journal_line_ids']/list//field[@name='credit']" position="after">
                    <!-- vista de factura -->
                    <field name="fcurrency_id" invisible="1" column_invisible="True"/>
                    <field name="debit_fcurrency" optional="show" widget="monetary" options="{'currency_field':'fcurrency_id'}" sum="debit_fcurrency"/>
                    <field name="credit_fcurrency" optional="show" widget="monetary" options="{'currency_field':'fcurrency_id'}" sum="credit_fcurrency"/>
                </xpath>
                
                <xpath expr="//field[@name='narration']/.." position="attributes">
                    <attribute name="colspan">4</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_totals']/../.." position="attributes">
                    <attribute name="colspan">7</attribute>
                </xpath>

                <xpath expr="//group[@class='oe_subtotal_footer']" position="before">

                    <group class="oe_subtotal_footer" invisible="(same_currency == False) or (move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))">
                        <field name="amount_untaxed_fcurrency" widget='monetary' options="{'currency_field': 'fcurrency_id'}"/>
                        <field name="amount_tax_fcurrency" widget='monetary' options="{'currency_field': 'fcurrency_id'}"/>
                        <field name="amount_total_fcurrency" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'fcurrency_id'}"/>
                        <field name="invoice_payments_widget_fcurrency" colspan="2" nolabel="1" widget="payment"/>
                        <field name="amount_residual_fcurrency"  class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'fcurrency_id'}" invisible="state == 'draft'" />
                    </group>
                    <group class="oe_subtotal_footer" invisible="(same_currency == True) or ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))">
                        <field name="amount_untaxed_bs" />
                        <field name="amount_tax_bs" />
                        <field name="amount_total_bs" class="oe_subtotal_footer_separator"/>
                        <field name="invoice_payments_widget_bs" colspan="2" nolabel="1" widget="payment"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="attributes">
                    <attribute name="class">o_inner_group grid oe_subtotal_footer oe_right col-lg-7</attribute>
                </xpath>
            </field>
        </record>

        <record id="account_move_line_tree_inherit_dual_currency" model="ir.ui.view">
            <field name="name">account.move.line.list.inherit.dual.currency</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit']" position="after">
                    <field name="tax_today" string="Tasa" optional="hide" invisible="display_type in ('line_section', 'line_note')"/>
                    <field name="fcurrency_id" readonly="1" invisible="1" column_invisible="True"/>
                    <field name="debit_fcurrency" sum="Débito Total ¤" widget="monetary" options="{'currency_field': 'fcurrency_id'}" optional="hide" invisible="display_type in ('line_section', 'line_note')"/>
                    <field name="credit_fcurrency" sum="Crédito Total ¤" widget="monetary" options="{'currency_field': 'fcurrency_id'}" optional="hide" invisible="display_type in ('line_section', 'line_note')"/>
                    <field name="balance_fcurrency" invisible="1" column_invisible="True"/>
                    <field name="amount_residual_fcurrency" optional="hide" readonly="1" widget="monetary" options="{'currency_field': 'fcurrency_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_tree_inherit_views" model="ir.ui.view">
            <field name="name">account_move_tree_inherit_views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total_in_currency_signed']" position="after">
                    <field name="fcurrency_id" readonly="1" column_invisible="True" />
                    <field name="amount_total_fcurrency" sum="Total ¤" widget="monetary" options="{'currency_field': 'fcurrency_id'}" />
                </xpath>
                <xpath expr="//field[@name='amount_total_in_currency_signed']" position="attributes">
                    <attribute name="sum">Total in Currency</attribute>
                    <attribute name="decoration-bf">1</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="custom_omega_view_move_tree" model="ir.ui.view">
            <field name="name">custom_omega_view_move_tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total_signed']" position="after">
                    <field name="amount_total_in_currency_signed" string="Total en divisa" sum="Total in Divisa" decoration-bf="1" optional="show"/>
                    <field name="currency_id"  optional="show"/>
                    
                </xpath>
            </field>
        </record>

        

    </data>
</odoo>
