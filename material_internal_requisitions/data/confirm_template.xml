<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
   
        <record id="email_confirm_irrequisition" model="mail.template">
           <field name="name">Request for Internal Requisition - Send by Email</field>
           <field name="email_from">{{ object.request_emp.work_email }}</field>
           <field name="subject">Request for Internal Requisition - {{ object.name }}</field>
<!--           <field name="email_to">${object.request_emp.parent_id.work_email or object.request_emp.department_id.manager_id.work_email}</field>-->
           <field name="email_to">{{ object.request_emp.parent_id.sudo().work_email or object.request_emp.department_id.sudo().manager_id.work_email }}</field>
           <field name="model_id" ref="material_internal_requisitions.model_internal_requisition"/>
           <field name="auto_delete" eval="True"/>
           <field name="lang">{{ object.request_emp.user_id.lang or user.lang }}</field>
           <field name="email_layout_xmlid">mail.mail_notification_light</field>
           <field name="body_html"><![CDATA[
            <p>Dear <t t-out="object.request_emp.parent_id.sudo().name or object.request_emp.department_id.sudo().manager_id.name"/>,</p>

            <p>You have a new internal requisition request awaiting your approval:</p>
            <ul>
                <li><strong>Requisition</strong>: <t t-out="object.name"/></li>
                <li><strong>Requested by</strong>: <t t-out="object.request_emp.name"/></li>
                <li><strong>Department</strong>: <t t-out="object.request_emp.department_id.name or ''"/></li>
            </ul>

            <t t-set="base_url" t-value="env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
            <p>
                <a t-att-href="'%s/web#id=%s&model=%s&view_type=form' % (base_url, object.id, object._name)">Open in Odoo</a>
            </p>
            ]]></field>
        </record>
        
        <record id="email_ir_requisition" model="mail.template">
           <field name="name">Approval Request for Internal Requisition to IR User - Send by Email</field>
           <field name="email_from">{{ object.request_emp.work_email }}</field>
           <field name="subject">Approval Request for Internal Requisition to IR User - {{ object.name }}</field>
           <field name="email_to">{{ object.requisiton_responsible_id.work_email }}</field>
           <field name="model_id" ref="material_internal_requisitions.model_internal_requisition"/>
           <field name="auto_delete" eval="True"/>
           <field name="lang">{{ object.requisiton_responsible_id.user_id.lang or user.lang }}</field>
           <field name="email_layout_xmlid">mail.mail_notification_light</field>
           <field name="body_html"><![CDATA[
            <p>Dear <t t-out="object.requisiton_responsible_id.name"/>,</p>

            <p>An internal requisition has been submitted and requires your approval:</p>
            <ul>
                <li><strong>Requisition</strong>: <t t-out="object.name"/></li>
                <li><strong>Requested by</strong>: <t t-out="object.request_emp.name"/></li>
                <li><strong>Department</strong>: <t t-out="object.request_emp.department_id.name or ''"/></li>
            </ul>

            <t t-set="base_url" t-value="env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
            <p>
                <a t-att-href="'%s/web#id=%s&model=%s&view_type=form' % (base_url, object.id, object._name)">Open in Odoo</a>
            </p>
            ]]></field>
        </record>
        
    </data>
</odoo>

